<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.Design.NoActionBar"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#033934"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/personal_cal_top_image"
            android:layout_height="350dp"/>

        <LinearLayout
            android:id="@+id/graph_xaxis_labels"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_cal_top_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/personal_month"
                android:layout_width="wrap_content"
                android:backgroundTint="#E3C057"
                android:layout_marginLeft="10dp"
                android:padding="12dp"

                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="January"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/personal_date"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:backgroundTint="#E3C057"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="13"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/personal_year"
                android:layout_width="wrap_content"
                android:backgroundTint="#E3C057"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:text="2021"/>


        </LinearLayout>


        <!--        <CalendarView-->
<!--            android:layout_width="match_parent"-->
<!--            android:id="@+id/personal_cal"-->
<!--            android:layout_height="match_parent"/>-->


        <Button
            android:id="@+id/personal_quote"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:backgroundTint="#E3C057"
            android:padding="40dp"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Let this moment to the Lord &amp; let every moment be so "/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>